
<%if(accessToken.isValid){%>
<h1>Reset Password</h1>
<form action="/users/reset_password/<%=accessToken.accessToken%>" method="POST">
    <input type="password" id="password" name="password" placeholder="Password" required> 
    <input type="password" id="confirm_password" name="confirm_password" placeholder="Confirm Password" required> 
    <input type="Submit" id="submit" value="Reset Password"> 

</form><%}else{%>
    <h2>Your Password Reset Link has been expired. Kindly generate new one!</h2>
    <a href="/users/provide_email"> Reset Password</a>
    <%}%>
<div id="#message"></div>